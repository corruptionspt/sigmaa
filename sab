local copied = Instance.new("TextLabel")
copied.Size = UDim2.new(0, 80, 0, 25)
copied.Position = UDim2.new(0.5, -40, 1, 5)
copied.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
copied.Text = "Copied!"
copied.Font = Enum.Font.Arcade
copied.TextColor3 = Color3.fromRGB(100, 255, 100)
copied.TextSize = 16
copied.Visible = false
copied.Parent = frame

local copiedCorner = Instance.new("UICorner", copied)
copiedCorner.CornerRadius = UDim.new(0, 6)

local UIS = game:GetService("UserInputService")
local dragging, dragStart, startPos

frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

UIS.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

local function showCopied()
	copied.Visible = true
	copied.TextTransparency = 1
	TweenService:Create(copied, TweenInfo.new(0.25), {TextTransparency = 0}):Play()
	task.wait(1)
	TweenService:Create(copied, TweenInfo.new(0.25), {TextTransparency = 1}):Play()
	task.wait(0.25)
	copied.Visible = false
end

copyButton.MouseButton1Click:Connect(function()
	local ok = tryCopyToClipboard(DiscordInvite)
	if ok then
		showCopied()
	else
		pcall(function()
			StarterGui:SetCore("ChatMakeSystemMessage", {Text = "Invite: " .. DiscordInvite})
		end)
		showCopied()
	end
end)

frame.BackgroundTransparency = 1
stroke.Thickness = 0
TweenService:Create(frame, TweenInfo.new(0.4, Enum.EasingStyle.Quad), {
	BackgroundTransparency = 0.05
}):Play()
TweenService:Create(stroke, TweenInfo.new(0.4), {Thickness = 2}):Play()
